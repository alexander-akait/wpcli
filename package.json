{
    "name": "wpcli",
    "version": "1.0.1",
    "description": "Simple wrapper to use wp-cli with promises",
    "author": "itgalaxy <development@itgalaxy.company>",
    "license": "MIT",
    "main": "dist/index.js",
    "files": [
        "dist",
        "!**/__tests__"
    ],
    "scripts": {
        "lint:eslint": "eslint . --ignore-path .gitignore",
        "lint:remark": "remark . -f -i .gitignore -q",
        "lint": "npm-run-all -l -p lint:**",
        "formatter:prettier": "eslint . --fix --ignore-path .gitignore",
        "formatter": "npm-run-all -l -p formatter:**",
        "ava": "nyc ava --verbose",
        "pretest": "NODE_ENV=TEST npm run lint",
        "test": "NODE_ENV=TEST npm run ava",
        "prebuild": "rimraf dist",
        "build": "babel src --out-dir dist --ignore /__tests__/",
        "prepublish": "npm run build",
        "release": "npmpub"
    },
    "dependencies": {
        "execa": "^0.7.0"
    },
    "devDependencies": {
        "ava": "^0.19.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.11.0",
        "babel-polyfill": "^6.22.0",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^4.1.1",
        "eslint-plugin-ava": "^4.2.1",
        "eslint-plugin-import": "^2.6.0",
        "eslint-plugin-itgalaxy": "^48.0.0",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-jsx-a11y": "^6.0.0",
        "eslint-plugin-lodash": "^2.4.3",
        "eslint-plugin-node": "^5.1.0",
        "eslint-plugin-prettier": "^2.1.2",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-react": "^7.1.0",
        "eslint-plugin-unicorn": "^2.1.2",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.0",
        "nyc": "^11.0.0",
        "package-schema": "^1.0.0",
        "pify": "^3.0.0",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0",
        "rimraf": "^2.5.2",
        "husky": "^0.14.0",
        "lint-staged": "^4.0.0",
        "prettier": "^1.4.2"
    },
    "engines": {
        "node": ">=4"
    },
    "keywords": [
        "cli",
        "wp-cli",
        "promise",
        "wordpress"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/wpcli.git"
    },
    "bugs": {
        "url": "https://github.com/itgalaxy/wpcli/issues"
    },
    "homepage": "https://github.com/itgalaxy/wpcli",
    "ava": {
        "require": [
            "babel-register",
            "babel-polyfill"
        ],
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "rules": {
            "node/no-unsupported-features": "off"
        },
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    }
}
