{
    "name": "wpcli",
    "version": "1.0.0",
    "description": "Simple wrapper to use wp-cli with promises",
    "author": "itgalaxy <development@itgalaxy.company>",
    "license": "MIT",
    "main": "dist/index.js",
    "files": [
        "dist",
        "!**/__tests__"
    ],
    "scripts": {
        "lint:eslint": "eslint . --ignore-path .gitignore",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:remark": "remark . -f -i .gitignore -q",
        "lint": "npm-run-all -l -p lint:**",

        "ava": "nyc ava --verbose",
        "pretest": "NODE_ENV=TEST npm run lint",
        "test": "NODE_ENV=TEST npm run ava",

        "prebuild": "rimraf dist",
        "build": "babel src --out-dir dist --ignore /__tests__/",

        "prepublish": "npm run build",
        "release": "npmpub"
    },
    "dependencies": {
        "execa": "^0.6.0"
    },
    "devDependencies": {
        "ajv-cli": "^1.1.0",
        "ava": "^0.18.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.11.0",
        "babel-polyfill": "^6.22.0",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^3.15.0",
        "eslint-plugin-ava": "^4.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-itgalaxy": "^41.0.0",
        "eslint-plugin-jsx-a11y": "^4.0.0",
        "eslint-plugin-lodash": "^2.2.0",
        "eslint-plugin-node": "^4.0.0",
        "eslint-plugin-promise": "^3.4.0",
        "eslint-plugin-react": "^6.8.0",
        "eslint-plugin-unicorn": "^2.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.0",
        "nyc": "^10.0.0",
        "package-schema": "^1.0.0",
        "pify": "^2.3.0",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^5.0.0",
        "rimraf": "^2.5.2"
    },
    "engines": {
        "node": ">=4"
    },
    "keywords": [
        "cli",
        "wp-cli",
        "promise",
        "wordpress"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/wpcli.git"
    },
    "bugs": {
        "url": "https://github.com/itgalaxy/wpcli/issues"
    },
    "homepage": "https://github.com/itgalaxy/wpcli",
    "ava": {
        "require": [
            "babel-register",
            "babel-polyfill"
        ],
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    }
}
